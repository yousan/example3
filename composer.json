{
  "name": "yousan/hoge",
  "description": "Add a shortcode that shows FaceBook share count.",
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.7",
    "wp-coding-standards/wpcs": "^0.10.0",
    "phpmd/phpmd": "^2.5"
  },
  "scripts" :{
    "post-install-cmd": [
      "php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/"
    ],
    "post-update-cmd": [
      "php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/"
    ],
    "test": [
      "php vendor/bin/phpcs -p -s -v -n . --standard=./codesniffer.ruleset.xml --extensions=php --ignore=vendor/ --colors",
      "phpmd example3.php phpmd.ruleset.xml"
    ]
  }
}

